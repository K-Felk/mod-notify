{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Notes about all kind of objects",
  "properties": {
    "id": {
      "type": "string"
    },
    "recipientId": {
      "type": "string"
    },
    "senderId": {
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "link": {
      "type": "string"
    },
    "seen": {
      "type": "boolean"
    },
    "metaData": {
      "type": "object",
      "$ref": "raml-util/schemas/metadata.schema"
    }
  },
  "required": [
    "recipientId",
    "text"
  ]
}
