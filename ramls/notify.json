{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Notifications to a user",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "recipientId": {
      "type": "string"
    },
    "senderId": {
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "link": {
      "type": "string"
    },
    "seen": {
      "type": "boolean",
      "default": false
    },
    "metadata": {
      "type": "object",
      "$ref": "raml-util/schemas/metadata.schema"
    }
  },
  "required": [
    "text"
  ]
}
